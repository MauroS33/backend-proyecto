<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Mi Carrito</h1>

  {{#if errorMessage}}
   <p>{{errorMessage}}</p>
  {{else if cart}}
    <div id="cart">
      {{#each cart.products}}
        <div>
          <h3>{{this.product.title}}</h3>
          <p>Precio unitario: ${{this.product.price}}</p>
          <p>Cantidad: {{this.quantity}}</p>
          <p>Subtotal: ${{multiply this.product.price this.quantity}}</p>
        </div>
      {{/each}}

      <h2>Total: ${{cart.total}}</h2>

      <button onclick="checkout()">Finalizar Compra</button>
    </div>
  {{else}}
    <p>El carrito está vacío.</p>
  {{/if}}

  <script>
    function checkout() {
      alert("Gracias por tu compra! Proceso de pago simulado.");
      window.location.href = "/"; // Redirigir al inicio después de "comprar"
    }
  </script>
</body>
</html>